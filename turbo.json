{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "generate:categories:exec": {
      "outputs": [
        "src/lib/config/category-config.generated.ts"
      ],
      "inputs": [
        "scripts/build/generate-category-config.ts",
        ".build-cache/cache.json"
      ],
      "cache": true,
      "passThroughEnv": ["SUPABASE_SERVICE_ROLE_KEY", "NEXT_PUBLIC_SUPABASE_URL"]
    },
    "build:skills:exec": {
      "outputs": [
        "content/skills/*.zip",
        "public/downloads/skills/*.zip"
      ],
      "inputs": [
        "content/skills/*.json",
        "content/skills/*.zip",
        "scripts/build/generate-skill-packages.ts",
        "src/lib/transformers/skill-to-md.ts",
        ".build-cache/cache.json"
      ],
      "cache": true,
      "persistent": true,
      "passThroughEnv": ["SUPABASE_SERVICE_ROLE_KEY", "NEXT_PUBLIC_SUPABASE_URL"]
    },
    "generate:service-worker:exec": {
      "dependsOn": ["generate:categories:exec"],
      "outputs": ["public/service-worker.js"],
      "inputs": [
        "scripts/build/generate-service-worker.ts",
        "src/lib/config/category-config.generated.ts",
        "src/lib/constants/security.ts",
        "package.json",
        ".build-cache/cache.json"
      ],
      "cache": true
    },
    "type-check": {
      "outputs": ["**/*.tsbuildinfo"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "cache": true
    }
  },
  "globalDependencies": ["package.json", "pnpm-lock.yaml"],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY"
  ],
  "globalPassThroughEnv": [
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_DEPLOYMENT_ID",
    "VERCEL_GIT_COMMIT_SHA",
    "VERCEL_GIT_COMMIT_MESSAGE",
    "VERCEL_GIT_COMMIT_AUTHOR_LOGIN",
    "VERCEL_GIT_COMMIT_AUTHOR_NAME",
    "VERCEL_GIT_REPO_SLUG",
    "VERCEL_GIT_REPO_OWNER",
    "VERCEL_GIT_REPO_ID",
    "VERCEL_GIT_PULL_REQUEST_ID",
    "TURBO_REMOTE_CACHE_SIGNATURE_KEY",
    "CI",
    "CONTINUOUS_INTEGRATION",
    "NEXT_PUBLIC_SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY"
  ]
}
