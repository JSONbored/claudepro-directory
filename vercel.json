{
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- . ':(exclude).github/' ':(exclude)scripts/github-actions/' ':(exclude)templates/' ':(exclude)*.md' ':(exclude)LICENSE' ':(exclude).gitignore'",
  "installCommand": "corepack enable pnpm && corepack install -g pnpm@10.19.0 && pnpm install --frozen-lockfile",
  "buildCommand": "pnpm build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/daily-maintenance",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/weekly-tasks",
      "schedule": "0 0 * * 1"
    }
  ]
}
