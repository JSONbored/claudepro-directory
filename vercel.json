{
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- . ':(exclude)content/'",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/*": {
      "maxDuration": 5
    },
    "app/(agents|commands|hooks|mcp|rules|trending|submit|partner|community|jobs)/**.tsx": {
      "maxDuration": 5
    },
    "app/page.tsx": {
      "maxDuration": 5
    },
    "app/**/opengraph-image": {
      "maxDuration": 10
    },
    "app/manifest": {
      "maxDuration": 5
    }
  },
  "crons": [
    {
      "path": "/api/cache/warm",
      "schedule": "0 3 * * *"
    }
  ]
}