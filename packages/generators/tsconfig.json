{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@heyclaude/database-types": ["../database-types/dist/index"],
      "@heyclaude/web-runtime": ["../web-runtime/dist/index"],
      "@heyclaude/web-runtime/*": ["../web-runtime/dist/*"],
      "@heyclaude/shared-runtime": ["../shared-runtime/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../database-types/tsconfig.json" },
    { "path": "../web-runtime/tsconfig.json" },
    { "path": "../shared-runtime/tsconfig.json" }
  ]
}
