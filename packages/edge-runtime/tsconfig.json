{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@heyclaude/database-types": ["../database-types/src/index.ts"],
      "@heyclaude/shared-runtime": ["../shared-runtime/src/index.ts"]
    },
    "typeRoots": ["src/types", "../../node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/utils/email/**"],
  "references": [
    { "path": "../database-types/tsconfig.json" },
    { "path": "../shared-runtime/tsconfig.json" }
  ]
}
