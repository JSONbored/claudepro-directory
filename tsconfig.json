{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./config/build/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "config/build/../../src/**/*.ts",
    "config/build/../../src/**/*.tsx",
    "config/build/../../src/types/**/*.d.ts",
    "config/build/../../tests/**/*.ts",
    "config/build/../../tests/**/*.tsx",
    "config/build/../../.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vitest.config.ts"
  ]
}
