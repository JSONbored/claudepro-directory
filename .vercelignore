# OS files (safe to exclude)
Thumbs.db
desktop.ini

# DO NOT EXCLUDE - Required for build:
# .git/ - needed for git diff command in build
# content/ - needed by build-content.ts script
# scripts/ - contains build scripts
# assets/ - may contain images used in the app
# generated/ - created during build
# public/ - needed for static files
# app/ - the actual application
# components/ - React components
# lib/ - utility functions
# types/ - TypeScript types
# styles/ - CSS files
# package.json - build configuration
# package-lock.json - dependency lock file
# tsconfig.json - TypeScript config
# next.config.js - Next.js config
# tailwind.config.ts - Tailwind config
# postcss.config.js - PostCSS config